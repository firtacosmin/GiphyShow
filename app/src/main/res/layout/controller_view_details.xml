<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="state"
            type="com.fcc.giphyshow.ui.details.view.DetailsViewState"/>


    </data>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/playerFrame"
            android:layout_width="304dp"
            android:layout_height="@dimen/player_view_height"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.exoplayer2.ui.SimpleExoPlayerView
                android:id="@+id/player_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <ImageView
            android:id="@+id/logo_img"
            android:layout_width="@dimen/gif_details_logo_width"
            android:layout_height="@dimen/gif_details_logo_width"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/desc_logo_img"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/playerFrame"
            app:layout_constraintVertical_bias="0.0"
            app:imageUrl="@{state.logoImageURL}" />

        <ImageView
            android:id="@+id/upvote_img"
            android:layout_width="@dimen/vote_image_width"
            android:layout_height="@dimen/vote_image_width"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="139dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/desc_upvote_img"
            android:elevation="0dp"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/logo_img"
            app:layout_constraintTop_toBottomOf="@+id/playerFrame"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_thumb_up_black_24dp" />

        <ImageView
            android:id="@+id/downvote_img"
            android:layout_width="@dimen/vote_image_width"
            android:layout_height="@dimen/vote_image_width"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/desc_downvote_img"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toRightOf="@+id/upvote_img"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/playerFrame"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_thumb_down_black_24dp" />

        <TextView
            android:id="@+id/upvote_count_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="156dp"
            android:layout_marginTop="8dp"
            android:text="@{state.upVote_count}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/logo_img"
            app:layout_constraintTop_toBottomOf="@+id/upvote_img"
            app:layout_constraintVertical_bias="0.03" />

        <TextView
            android:id="@+id/downvote_count_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="26dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@{state.downVote_count}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toRightOf="@+id/upvote_count_txt"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/downvote_img"
            app:layout_constraintVertical_bias="0.03" />

        <ImageView
            android:id="@+id/download_img"
            android:layout_width="@dimen/vote_image_width"
            android:layout_height="@dimen/vote_image_width"
            android:layout_marginStart="82dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/desc_download_image"
            app:layout_constraintLeft_toRightOf="@+id/logo_img"
            app:layout_constraintTop_toBottomOf="@+id/playerFrame"
            app:srcCompat="@drawable/ic_file_download_black_24dp"
            android:tint="@{state.getDownloadImgTint()}"/>

    </android.support.constraint.ConstraintLayout>
</layout>